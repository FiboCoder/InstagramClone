<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.instagram">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Instagram">
        <activity
            android:name="Activity.AddStoryActivity"
            android:exported="false" />
        <activity
            android:name="Activity.StoryActivity"
            android:exported="false" />
        <activity
            android:name="Activity.Comments"
            android:exported="false" />
        <activity
            android:name="Activity.ViewPost"
            android:exported="false" />
        <activity
            android:name="Activity.Filters"
            android:exported="false" />
        <activity
            android:name="Activity.UserProfile"
            android:exported="false"
            android:parentActivityName="Activity.MainActivity" />
        <activity
            android:name="Activity.EditProfile"
            android:exported="false"
            android:parentActivityName="Activity.MainActivity" />
        <activity
            android:name="Activity.Login"
            android:exported="true"
            android:theme="@style/AppThemeLoginAndRegister">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="Activity.Register"
            android:exported="false"
            android:theme="@style/AppThemeLoginAndRegister" />
        <activity
            android:name="Activity.MainActivity"
            android:exported="false" />
    </application>

</manifest>